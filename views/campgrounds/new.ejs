<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">New Campground</h1>

        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <div class="card-body">
                <form action="/campgrounds" method="post" novalidate class="validated-form"
                    enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" name="campground[title]" id="title" required>
                        <div class="valid-feedback">
                            Looks Fine!
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" type="text" name="campground[location]" id="location" required>
                        <div class="valid-feedback">
                            Looks Fine!
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="price">Campground Price</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input type="text" class="form-control" name="campground[price]" placeholder="0.00"
                                aria-label="Amount (to the nearest dollar)" required>
                            <div class="valid-feedback">
                                Looks Fine!
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" type="text" name="campground[description]" id="description"
                            required></textarea>
                        <div class="valid-feedback">
                            Looks Fine!
                        </div>
                    </div>

                    <div class="input-group mb-3">
                        <input class="form-control" type="file" name="image" id="image" multiple>
                        <label class="input-group-text" for="image">Upload Images</label>
                    </div>

                    <div class="mb-3">
                        <button class="btn btn-dark">Add Campground</button>
                    </div>

                </form>

                <br>
                <a href="/campgrounds">All Campgrounds</a>
            </div>
            </div>

        </div>


    </div>